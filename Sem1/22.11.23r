<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shay</title>
    <style>
        div {height: 100vh;
                width: 50%;}

        content {display: flex;
                height: auto;
                width: auto;
                flex-direction: column;}

        body {margin: 0px;
                padding: 0px;
                display: flex;
                flex-direction: row;}

        div:nth-of-type(1) {display: flex;
                            align-items: center;
                            justify-content: center;}

        button {align-self: flex-end;}

        #cent {display: flex;
                justify-content: center;
                align-items: center;}
    </style>
</head>
<body>
    <div style="background-color:blueviolet;">
        <content>
            <input type='number' id="liczba1" placeholder="pierwsza liczba">
            <input type='number' id="liczba2" placeholder="druga liczba">
            <button onclick="dodawanie()">OK</button>
        </content>

    </div>
    <div style="background-color:chocolate;" id="cent">
        <p id="lol"></p>
    </div>


    <script>
        function dodawanie(){
        
        x = document.getElementById('liczba1').value;
        y = document.getElementById('liczba2').value;
        console.log(x, y);

        document.getElementById('lol').innerHTML = x - - y;
        }
    </script>
</body>
</html>
